		"clsx": "^2.1.1",
		"lucide-react": "^0.555.0",
		"motion": "^12.23.25",
		"react": "^19",
		"react-dom": "^19",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"wouter": "^3.8.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
